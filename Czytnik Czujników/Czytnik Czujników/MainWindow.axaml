<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:vm="clr-namespace:Czytnik_Czujnik贸w.ViewModels"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="Czytnik_Czujnik贸w.MainWindow"
		x:DataType="vm:MainViewModel"
        Title="Czytnik_Czujnik贸w">
	<StackPanel Background="#02021f" VerticalAlignment="Stretch">
		<TextBlock Text="Status czujnik贸w" Margin="10" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="32" Foreground="OldLace"/>
